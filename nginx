## To create and edit nginx service, typing within the terminal command: sudo nano /etc/nginx/sites-available/default
## Note this is the default configuration file being edited and when done ensure that the nginx service is restarted
## to allow changes to appear (command: sudo systemctl restart nginx)

# Default server configuration below

upstream flaskhelloworld {
    server 127.0.0.1:5000;
}


server {
        listen 80 default_server;
        listen [::]:80 default_server;;

        root /var/www/html;

        # Add index.php to the list if you are using PHP
        index index.html index.htm index.nginx-debian.html;

        server_name http://127.0.0.1:5000;

        location / {
                proxy_pass http://flaskhelloworld;
        }


        location /output.txt {
                default_type text/plain;;
                alias /home/ubuntu/helloworld/output.txt;
        }

        location /response.html {
                alias /home/ubuntu/helloworld/response.html;
        }

}
